@model DevicesModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Device</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="Location">Device Location</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Status">Status</label>
            <input asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="SetTemperature">Set Temperature</label>
            <input asp-for="SetTemperature" class="form-control" />
            <span asp-validation-for="SetTemperature" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="AssignedStaff">Assigned Staff</label>
            <input asp-for="AssignedStaff" class="form-control" />
            <span asp-validation-for="AssignedStaff" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add Device</button>
        <a asp-controller="Devices" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to Devices</a>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }