@model IEnumerable<DevicesModel>

@{
    ViewData["Title"] = "Devices";
}


<div class="text-center">
    <br />
    <h1>Our Registered Devices</h1>
    <p class="text-justify">
        Here are list of our Registered Devices and all Operations that can be performed on them
    </p>


    <div class="container p-3 bg-gradient">
        <div class="row pt-4">
            <div class="col-6 text-start">
                List of Devices
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Devices" asp-action="AddDevice" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add New Device
                </a> &nbsp; &nbsp;
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Device Location</th>
                <th scope="col">Status</th>
                <th scope="col">Temperature</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in Model)
            {
                <tr>
                    <td width="10%">@device.DeviceId</td>
                    <td width="10%">@device.Location</td>
                    <td width="30%">@device.Status</td>
                    <td width="20%">@device.SetTemperature</td>
                    <td width="20%"><a asp-controller="Devices" asp-action="RegulateDevice" asp-route-id="@device.DeviceId" class="btn btn-warning"><i class="bi bi-pencil-square"></i> &nbsp;Regulate</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
